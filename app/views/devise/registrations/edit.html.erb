
<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="field">
              <div class="control">
                <%= f.input :name,
                            hint: "leave it blank if you don't want to change it",
                            autofocus: true,
                            required: false,
                            wrapper: false,
                            input_html: { autocomplete: "new-name", class: 'input' },
                            label_html: { class: 'label' } %>
              </div>
            </div>
          <div class="field">
              <div class="control">
                <%= f.input :username,
                            required: true,
                            wrapper: false,
                            input_html: { autocomplete: "new-username", class: 'input' },
                            label_html: { class: 'label' } %>
              </div>
            </div>
          <div class="field">
            <div class="control">
              <%= f.input :email, required: false, wrapper: false,
               input_html: { class: 'input' }, label_html: { class: 'label' } %>
            </div>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <% if f.object.encrypted_password.present? %>
            <div class="field">
              <div class="control">
                <%= f.input :password,
                            hint: "leave it blank if you don't want to change it",
                            required: false,
                            wrapper: false,
                            input_html: { autocomplete: "new-password", class: 'input' },
                            label_html: { class: 'label' } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password_confirmation,
                            required: false,
                            wrapper: false,
                            input_html: { autocomplete: "new-password", class: 'input' },
                            label_html: { class: 'label' } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :current_password,
                            hint: "we need your current password to confirm your changes",
                            required: false,
                            wrapper: false,
                            input_html: { autocomplete: "new-password", class: 'input' },
                            label_html: { class: 'label' } %>
              </div>
            </div>
          <% end %>
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Update", class: 'button is-info' %>
            </div>
          </div>
        <% end %>

        <h3 class="title is-6">Cancel my account</h3>

        <p><span class="button is-warning"><%= link_to "Unhappy? Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></span></p>

        <span><%= link_to "Back", :back %></span>

      </div>

    </div>
  </div>
</div>
