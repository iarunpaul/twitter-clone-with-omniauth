<div class="column">
  <div class="panel">
    <div class="panel-heading">
      <h2 class="title is-4">My Profile</h2>
    </div>
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.username) %>
          </figure>
        </div>
      </article>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= current_user.name %></strong><br>
            <small><%= current_user.username %></small>
          </p>
        </div>
      </div>
    </div>
    <div class="panel-block">
      <div class="level is-mobile">
        <div class="level-item has-centered-text">
          <p class="heading">
          Tweets <%= current_user.tweeets.count %>
          </p>
        </div>
        <div class="level-item">
          <p class="heading">
          Likes 434
          </p>
        </div>
        <div class="level-item">
          <p class="heading">
          Followers 555
          </p>
        </div>
      </div>
    </div>
  </div>
</div>